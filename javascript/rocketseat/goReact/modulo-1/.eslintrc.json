{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "jsx-a11", "import"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix", "windows"],
    "quotes": ["error", "singlequotes"],
    "semi": ["error", "always"],
    "global-require": "off"
  }
}
