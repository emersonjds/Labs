{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node",
            "port": 9229,
            "protocol": "inspector",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/client/src"
        }
    ],
    "compounds": [
        {
            "name": "Full-stack",
            "configurations": [
                "Node",
                "Chrome"
            ]
        }
    ]
}